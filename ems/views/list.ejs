<!DOCTYPE html>
<html lang en="us">
    <body>
        <%- include ('header') -%>
        <%- include ('navbar') -%>
        
        <div role="main" class="container" style="width: 50%;">
            
        </br></br>
            
        <% if (employees.length) { %>
            <h2>Employee List</h2>
            <br>
            
            <table class="table table‐hover">
                <thead class="thead‐dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>ID Number</th>
                </tr>
                </thead>
                <tbody>
                <% employees.forEach(function (entry) { %>
                <tr>
                    <td><%= entry.firstName %></td>
                    <td><%= entry.lastName %></td>
                    <td><%= entry.id %></td>
                    <td><a href="/view.ejs/<%= entry.id %>">View Record</a></td>
                </tr>
                </tbody>
                <% }) %>
            </table>
            
            <% } else { %>
            No entries! <a href="/new.ejs">Add one!</a>
            <% } %>

            <a href="/new.ejs">Add New</a>
      </div>
       
        <%- include ('footer') -%>

    </body>
</html>