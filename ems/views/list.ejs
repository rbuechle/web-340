        <%- include ('header') -%>
        <%- include ('navbar') -%>
        
        <div role="main" class="container" style="width: 50%;">
            
        </br></br>
            
        <% if (employee.length) { %>
            <h2>Employee List</h2>
            <br/><br/>
            
            <table class="table table‐hover">
                <thead class="thead‐dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Record</th>
                </tr>
                </thead>
                <tbody>
                <% employee.forEach(function (employee) { %>
                <tr>
                    <td><%= employee.firstName %></td>
                    <td><%= employee.lastName %></td>
                    <td><a href="/view/<%= employee.lastName %>.ejs">View</a></td>
                </tr>
                </tbody>
                <% }) %>
            </table>
            
            <% } else { %>
            No entries! <a href="/new.ejs">Add one!</a>
            <% } %>
            <br/><br/>
            <a href="/new.ejs">Add New</a>

      </div>
       
